{
  "manifest_version": 3,
  "name": "Dexscreener Trader Extension",
  "version": "1.0.0",
  "description": "Trade directly on Dexscreener using this browser extension.",
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://dexscreener.com/*"],
      "js": ["content/script.js"]
    }
  ],
  "permissions": ["activeTab", "storage", "scripting"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
