{
  "manifest_version": 3,
  "name": "Dexscreener Trader",
  "version": "2.0.0",
  "description": "Trade Solana tokens via Jupiter with built-in encrypted wallet. Secure, fast, decentralized.",
  "permissions": ["storage", "activeTab", "scripting", "tabs", "alarms"],
  "host_permissions": [
    "https://*.dexscreener.com/*",
    "https://quote-api.jup.ag/*",
    "https://api.mainnet-beta.solana.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}